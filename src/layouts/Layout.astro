---
import '../styles/global.scss'

export interface Props {
	title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='viewport'
			content='width=device-width'
		/>
		<link
			rel='icon'
			type='image/svg+xml'
			href='/favicon.png'
		/>
		<link
			rel='stylesheet'
			href='https://unpkg.com/aos@next/dist/aos.css'
		/>
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<script is:inline src='https://unpkg.com/aos@next/dist/aos.js'></script>
		<script is:inline>
			AOS.init({
				duration: 1000,
			})
		</script>
	</body>
</html>
